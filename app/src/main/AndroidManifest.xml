<!--            android:exported="false"/>-->
        <activity
            android:name="com.example.cultivate.ui.activity.activityForService"
            android:theme="@style/AppTheme.Transparent"/>
        <activity
            android:name="com.example.cultivate.ui.activity.Live2DActivity"
            android:theme="@style/AppTheme.Transparent"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        />

    </application>

</manifest>